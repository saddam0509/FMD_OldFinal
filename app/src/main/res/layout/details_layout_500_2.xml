<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/tk500new"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="@drawable/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap Here"
        android:id="@+id/d2"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/d1"
        android:layout_alignEnd="@+id/d1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="@drawable/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap Here"
        android:id="@+id/d1"
        android:layout_below="@+id/d4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="@drawable/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap Here"
        android:id="@+id/d3"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="106dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="@drawable/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap Here"
        android:id="@+id/d4"
        android:layout_below="@+id/d2"
        android:layout_alignLeft="@+id/d3"
        android:layout_alignStart="@+id/d3" />

</RelativeLayout>